{
  "name": "@joaoptgrilo/dev-config",
  "version": "1.2.1",
  "description": "Sharable configurations for ESLint, Prettier, TypeScript, Playwright, and more.",
  "author": "JoÃ£o Grilo",
  "license": "MIT",
  "main": "eslint.config.mjs",
  "type": "module",
  "files": [
    ".prettierrc.json",
    ".cspell.json",
    "eslint.config.mjs",
    "playwright/",
    "tsconfig/",
    ".vscode/"
  ],
  "exports": {
    ".": "./eslint.config.mjs",
    "./.prettierrc.json": "./.prettierrc.json",
    "./.cspell.json": "./.cspell.json",
    "./playwright/base.config": "./playwright/base.config.ts",
    "./tsconfig/base.json": "./tsconfig/base.json",
    "./.vscode/settings.json": "./.vscode/settings.json"
  },
  "scripts": {
    "format": "prettier --write .",
    "check": "prettier --check . && publint",
    "prepublishOnly": "npm run check"
  },
  "peerDependencies": {
    "@eslint-react/eslint-plugin": ">=1.0.0",
    "@next/eslint-plugin-next": ">=14.0.0",
    "@stylistic/eslint-plugin": ">=2.0.0",
    "eslint": ">=9.0.0",
    "eslint-plugin-perfectionist": ">=2.0.0",
    "eslint-plugin-react": ">=7.0.0",
    "globals": ">=15.0.0",
    "typescript-eslint": ">=8.0.0"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "publint": "^0.2.12"
  },
  "dependencies": {
    "@types/node": "^24.1.0"
  }
}
